{
  "name": "@pixiv/three-vrm",
  "version": "0.3.5",
  "description": "VRM file loader for three.js.",
  "license": "MIT",
  "author": "pixiv",
  "files": [
    "/lib/",
    "/ts*/",
    "/types/",
    "LICENSE"
  ],
  "main": "lib/three-vrm.module.js",
  "types": "types/index.d.ts",
  "typesVersions": {
    "<3.8": {
      "*": [
        "ts3.4/*"
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pixiv/three-vrm.git"
  },
  "scripts": {
    "version": "yarn all",
    "postpublish": "yarn gh-pages",
    "all": "yarn lint && yarn clean && yarn build && yarn docs",
    "dev": "webpack-dev-server --mode development",
    "clean": "rimraf docs lib ts*/ types",
    "build": "yarn build-dev && yarn build-prod && yarn build-types",
    "build-dev": "webpack --mode development",
    "build-prod": "webpack --mode production",
    "build-types": "tsc --emitDeclarationOnly && downlevel-dts types ts3.4/types",
    "docs": "typedoc --out docs --mode file --excludeNotExported",
    "gh-pages": "node ./bin/gh-pages.js",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "typedefgen": "node ./bin/typedefgen.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "prettier": {
    "endOfLine": "lf",
    "tabWidth": 2,
    "singleQuote": true,
    "arrowParens": "always",
    "trailingComma": "all",
    "printWidth": 120
  },
  "dependencies": {},
  "devDependencies": {
    "@types/webpack": "^4.4.19",
    "@types/webpack-dev-server": "^3.1.7",
    "@types/webpack-merge": "^4.1.5",
    "@typescript-eslint/eslint-plugin": "^2.1.0",
    "@typescript-eslint/parser": "^2.1.0",
    "downlevel-dts": "^0.4.0",
    "eslint": "^6.3.0",
    "eslint-config-prettier": "^6.2.0",
    "eslint-plugin-prettier": "^3.1.0",
    "fork-ts-checker-webpack-plugin": "^4.1.4",
    "gh-pages": "^2.1.1",
    "husky": "^3.0.5",
    "lint-staged": "10.0.8",
    "prettier": "^1.18.2",
    "quicktype": "^15.0.199",
    "raw-loader": "^4.0.1",
    "rimraf": "^3.0.0",
    "three": "^0.118.3",
    "ts-loader": "^6.1.0",
    "ts-node": "^8.4.1",
    "typedoc": "^0.17.7",
    "typescript": "^3.9.3",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0",
    "webpack-dev-server": "^3.2.1",
    "webpack-merge": "^4.2.1",
    "worker-loader": "^2.0.0"
  },
  "peerDependencies": {
    "three": "^0.118.3"
  }
}

{
  "name": "@pixiv/vrm-viewer",
  "version": "2.1.1",
  "description": "The <vrm-viewer> web component that displays an interactive VRM model viewer",
  "license": "MIT",
  "author": "pixiv",
  "files": [
    "/lib/",
    "/ts*/",
    "/types/",
    "LICENSE"
  ],
  "type": "module",
  "main": "lib/vrm-viewer.module.js",
  "types": "types/index.d.ts",
  "typesVersions": {
    "<3.9": {
      "*": [
        "ts3.4/*"
      ]
    }
  },
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "import": "./lib/vrm-viewer.module.min.js",
      "require": "./lib/vrm-viewer.min.cjs"
    },
    "./package.json": "./package.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pixiv/three-vrm.git",
    "directory": "packages/vrm-viewer"
  },
  "scripts": {
    "version": "yarn all",
    "all": "yarn test && yarn lint && yarn clean && yarn build && yarn docs",
    "dev": "cross-env NODE_ENV=development rollup -w -c",
    "clean": "rimraf docs lib ts*/ types",
    "build": "yarn build-dev && yarn build-prod && yarn build-types",
    "build-js": "node ../../bin/build.mjs",
    "build-dev": "cross-env NODE_ENV=development yarn build-js",
    "build-prod": "cross-env NODE_ENV=production yarn build-js",
    "build-types": "tsc --declaration --declarationDir ./types --emitDeclarationOnly && downlevel-dts types ts3.4/types",
    "docs": "typedoc --entryPoints ./src/vrm-viewer.ts --out docs",
    "test": "echo There is no test for vrm-viewer",
    "lint": "eslint \"src/**/*.{ts,tsx}\"  && yarn lint-examples &&  prettier \"src/**/*.{ts,tsx}\" --check",
    "lint-examples": "eslint \"examples/**/*.{js,html}\" --rule \"padded-blocks: error\"",
    "lint-fix": "eslint \"src/**/*.{ts,tsx}\" --fix && eslint \"examples/**/*.{js,html}\" --fix &&  prettier \"src/**/*.{ts,tsx}\" --write"
  },
  "lint-staged": {
    "./src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "./examples/**/*.{js,html}": [
      "eslint --fix --rule \"padded-blocks: error\""
    ]
  },
  "dependencies": {
    "@google/model-viewer": "3.5.0",
    "@pixiv/three-vrm": "2.1.1"
  },
  "devDependencies": {
    "@types/three": "^0.162.0",
    "lit": "^3.1.3",
    "three": "^0.162.0"
  },
  "peerDependencies": {
    "@types/three": "^0.162.0",
    "lit": "^3.1.3",
    "three": "^0.162.0"
  }
}

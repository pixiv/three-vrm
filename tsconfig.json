      "@pixiv/three-vrm": ["packages/three-vrm"],
      "@pixiv/three-vrm-constraints": ["packages/three-vrm-constraints"],
      "@pixiv/types-vrm-constraints-1.0": ["packages/types-vrm-constraints-1.0"]
    }
  }
}
